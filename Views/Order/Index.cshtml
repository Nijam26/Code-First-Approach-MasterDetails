
@{
    ViewBag.Title = "Index";
}

<h2>Place Your Order</h2>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h2>Order</h2>
            <table class="table">
                <tr>
                    <td>Order Date</td>
                    <td>
                        <input type="date" id="orderDate" class="form-control" />
                        <span class="error">Valid order date required (ex: MM-dd-yyyy)</span>
                    </td>
                </tr>
                <tr>
                    <td>Description</td>
                    <td>
                        <textarea id="description" class="form-control"></textarea>
                    </td>
                </tr>
                <tr>
                    <td>Image</td>
                    <td>
                        <input type="file" name="ImageFile" id="imageupload" class="form-control" />
                    </td>
                </tr>
                <tr>
                    <td>If you are agree with the terms, check this box!</td>
                    <td>
                        <input type="checkbox" id="bool" class="form-inline">
                    </td>
                </tr>
            </table>
        </div>
        <div class="col-md-6">
            <h2>Order items</h2>
            <table class="table">
                <tr>
                    <td>Category</td>
                    <td>Product</td>
                    <td>Quantity</td>
                    <td>Rate</td>
                    <td>&nbsp;</td>
                </tr>
                <tr class="mycontainer" id="mainrow">
                    <td>
                        <select id="productCategory" class="pc form-control" onchange="LoadProduct(this)">
                            <option>Select</option>
                        </select>
                        <span class="error">Select Category</span>
                    </td>
                    <td>
                        <select id="product" class="product form-control">
                            <option>Select</option>
                        </select>
                        <span class="error">Select product</span>
                    </td>
                    <td>
                        <input type="text" id="quantity" class="quantity form-control" />
                        <span class="error">Valid quantity required</span>
                    </td>
                    <td>
                        <input type="text" id="rate" class="rate form-control" />
                        <span class="error">Valid rate required</span>
                    </td>
                    <td>
                        <input type="button" id="add" value="Add" class="btn btn-success" />
                    </td>
                </tr>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div style="padding: 10px 0; text-align: right;">
                <input type="button" id="submit" value="Save Order" class="btn btn-warning" style="padding:10px 20px" />
            </div>
        </div>
        <div class="col-md-6">
            <div id="orderItems">
                @Html.Partial("_PartialPage1")
            </div>
        </div>
    </div>
</div>

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css" />
<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
<script src="~/Scripts/my_Script.js"></script>

<style>
    span.error {
        display: none;
        color: red;
        font-size: 90%;
    }
</style>